<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

    <main>
      <div class="memeCaption">
        <div class="meme">
          <% for(let i=0; i < results.length; i++){ %>
            <% if (results[i].id===memeId) { %>
              <img width="250" height="250" src="<%= results[i].url %>">
              <% } %>
        </div>
        <% } %>
          <div style="display: flex; ">
            <% if (user) { %>
              <form action="/allMemes/<%= memeId %>/captions" method="POST" name="content">
                <img src="<%= user %>">
                <textarea type="text" name="content" placeholder="Add Your Own Caption Here:">
                  </textarea>
                <button type="submit"> Add Caption </button>
                <% } %>
          </div>
          </form>
          <% if (user) { %>
            <% for (let i=0; i < captions.length; i++) { %>
              <p>
                <%= captions[i] %>
              </p>
              <% } %>

    </main>

    <%- include('../partials/footer') %>